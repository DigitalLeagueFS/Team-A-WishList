<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="text-center">Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-success btn-sm"  %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>