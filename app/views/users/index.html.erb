<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.name %></th>
        <th scope="row"><%= user.email %></th>
        <th scope="row"><%= link_to 'Show', user %></th>
        <th scope="row"<%= link_to 'Edit', edit_user_path(user) %></th>
        <th scope="row"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></th>
      </tr>
    <% end %>
  </tbody>
</table>

